{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "declaration": true,
    "outDir": "./dist",
    "noEmit": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "stories/**/*"
  ],
  "exclude": [
    "node_modules",
    "stories/**/*.stories.tsx"
  ]
}
